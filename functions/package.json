{
  "name": "functions",
  "scripts": {
    "dev:build": "tsc -w",
    "dev:serve": "firebase emulators:start",
    "dev:shell": "firebase functions:shell",
    "dev:watch": "run-p dev:build dev:serve",
    "dev": "run-s build dev:watch",
    "lint:prettier": "prettier --check --plugin-search-dir=. . ",
    "lint:eslint": "eslint --ext .js,.ts .",
    "lint": "run-s lint:*",
    "format": "prettier --write --plugin-search-dir=. .",
    "build": "tsc",
    "serve": "run-s build dev:serve",
    "shell": "run-s build dev:shell",
    "start": "run-s shell",
    "deploy": "npm run build && firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "12"
  },
  "main": "lib/index.js",
  "dependencies": {
    "apollo-server-core": "^2.24.0",
    "apollo-server-express": "^2.24.0",
    "class-validator": "^0.13.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "firebase": "9.0.0-beta.2",
    "firebase-admin": "^9.2.0",
    "firebase-functions": "^3.15.7",
    "graphql": "^15.5.0",
    "nanoid": "^3.1.23",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1",
    "typedi": "^0.10.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.0",
    "firebase-functions-test": "^0.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.0",
    "prettier-plugin-organize-imports": "^2.0.0",
    "typescript": "^3.8.0"
  },
  "private": true
}
